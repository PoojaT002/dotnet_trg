@model IEnumerable<MVC_Assignment1.Models.Contact>

<style>
    body { background:#eef2f3; font-family:Arial; }
    table { width:60%; margin:auto; background:#fff; border-collapse:collapse; }
    th,td { padding:8px; border-bottom:1px solid #ddd; }
    th { background:#f5f5f5; }
    a { text-decoration:none; }
</style>

<h2 align="center">Contacts</h2>

<p align="center">@Html.ActionLink("Create", "Create")</p>

<table>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Action</th>
        <th></th>
    </tr>

    @foreach (var c in Model)
    {
        <tr>
            <td>@c.FirstName @c.LastName</td>
            <td>@c.Email</td>
            <td>
                <a href="@Url.Action("Delete", new { id = c.Id })">Delete</a>
            </td>
        </tr>
    }
</table>
